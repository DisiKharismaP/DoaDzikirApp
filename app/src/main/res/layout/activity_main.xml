<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ivAppbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_appbar"
        android:paddingHorizontal="@dimen/_20dp"
        android:paddingVertical="@dimen/_40dp">

        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do'a dan\nDzikir App"
            android:textColor="@color/dark_brown"
            android:textSize="@dimen/_30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_40dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivArtikel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/artikel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llDzikirDoaShalat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp">

                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/pray" />

                    <TextView
                        android:id="@+id/tvFirstRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="Dzikir dan Do'a Shalat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDzikirSetiapSaat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp">

                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/tvSecondRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="Dzikir Setiap Saat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDzikirDoaHarian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp">

                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/harian" />

                    <TextView
                        android:id="@+id/tvThirdRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="Dzikir dan Do'a Harian"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDzikirPagiPetang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp">

                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/pagipetang" />

                    <TextView
                        android:id="@+id/tvFourthRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        android:text="Dzikir Pagi dan Petang"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
